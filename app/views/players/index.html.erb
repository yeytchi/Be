<div class="return-button">
  <%= link_to seasons_path do %>
     <button type="button" class="btn btn-primary">Retour Ã  mes saisons</button>
  <% end %>
</div>

<div class="pages-wrapper">
  <div class="page-title">
    <h1>Liste des Joueurs</h1>
  </div>

  <div class="slates-wrapper">
    <div class="player-slate">
      <div class="player-info">
        Name
      </div>
      <div class="player-info">
        Postes
      </div>
      <div class="player-info">
        Club
      </div>
      <div class="player-offer">
        Offre
      </div>
    </div>
    <% @players.each do |player| %>

      <div class="player-slate">
        <div class="player-info">
          <%= player.first_name %> <%= player.last_name %>
        </div>
        <div class="player-info">
          <%= player.position %>
        </div>
        <div class="player-info">
          <%= player.club %>
        </div>
        <div class="player-offer">

          <button type="button" id="<%= player.id %>-offer" class="offer-btn btn btn-primary">Faire une offre</button>

        </div>
      </div>

      <div id="modal<%= player.id %>-offer" class="offer-form d-none">
        <%= simple_form_for([@season, @team, @offer], method: :post) do |f| %>
          <%= f.input :amount, label: 'Montant de ton offre' %>
          <%= f.association :team, default: params[:team_id], as: :hidden %>
          <%= f.association :player, label: false, selected: player.id, input_html: { class: 'd-none' } %>

          <button type="button" id="create<%= player.id %>-offer" class="offer-btn btn btn-primary">
            <%= f.button :submit, "Valider l'offre" do %>
          <% end %>
          </button>
        <% end %>


        <%= link_to '#', id: "cancel#{player.id}-offer" do %>
          Retour
        <% end %>

      </div>
    <% end %>
  </div>
</div>
